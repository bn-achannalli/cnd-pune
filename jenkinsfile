pipeline {
  agent any

  environment {
    NAME = "argocd"
    VERSION = "${env.BUILD_ID}-${env.GIT_COMMIT}"
    IMAGE_REPO = "meghakadur"
    GIT_TOKEN = credentials('github-token')
  }
  
  stages {
      stage('Git checkout stage') {
          steps {
              script{
                  echo 'git checkout'
                  git branch: "main", credentialsId: 'github-usr-psw', url: 'https://github.com/megha-6/cnd-pune.git'
                  echo 'Implement unit tests if applicable.'
                  echo 'This stage is a sample placeholder'
                  stash name: 'git-stash', includes: '**/*'
      }
    }
      }
      stage('Unit Tests') {
          steps {
             echo 'Implement unit tests if applicable.'
             echo 'This stage is a sample placeholder'
      }
    }
      stage('Build Image') {
          steps {
                  unstash 'git-stash'
             bat "docker build -f Dockerfile -t ${NAME} ."
             bat "docker tag ${NAME}:latest ${IMAGE_REPO}/${NAME}"
             
        }
      }
      stage('Push Image') {
          steps {
                  withDockerRegistry([credentialsId: "docker-credentials", url: ""]) {
                  bat 'docker push meghakadur/argocd'
             

        }
      }
      }
      stage('Clone/Pull Repo') {
         steps {
              script{
                 if (fileExists('gitops-argocd')) {

                    echo 'Cloned repo already exists - Pulling latest changes'

                    dir("gitops-argocd") {
                    bat 'git pull'
            }

                  } else {
                    echo 'Repo does not exists - Cloning the repo'
                    bat 'git clone -b feature-gitea https://github.com/megha-6/gitops-argocd.git'
          }
        }
      }
    }
      stage('Update Manifest') {
          steps {
              dir("gitops-argocd/jenkins-demo") {
                bat "git config --global user.email 'ci@ci.com'"
                bat 'sed -i "s#siddharth67.*#${IMAGE_REPO}/${NAME}:${VERSION}#g" deployment.yaml'
                bat 'cat deployment.yaml'
        }
      }
    }
      stage('Commit & Push') {
          steps {
             dir("gitops-argocd/jenkins-demo") {
               bat 'git remote set-url origin https://github.com/megha-6/gitops-argocd.git'
               bat 'git checkout feature'
               bat 'git add -A'
               bat 'git commit -am "Updated new image version for VERSION - $VERSION"'
               bat 'git push origin feature'
        }
      }
    }
      stage('Raise PR') {
          steps {
             dir("gitops-argocd/jenkins-demo") {
               bat 'gh auth login -h github.com  -p https --with-token < /home/devsecops/token.txt'
               bat 'gh auth status'
               bat 'gh pr create -a @me --title "Updated Image Version - $VERSION" --body "Planets Updated in Solar System - $VERSION"  -B main'
        }
      }
    }
  }
}
  


      
